<%-include("./partials/header") -%>

<div id="posts">
  <% blogs.forEach(blog=>{ %>
    <div class="card border-dark">
      <div class="card-header d-flex justify-content-between align-items-center">
        <a href="/blogs/<%=blog.author.username %>"> <%=blog.author.username %></a>
        <div>
          <span id="likes-count-<%= blog._id %>">
          <%=blog.likes.length %></span>         
          <i class="fas fa-thumbs-up"
            id="like-button-{{post.id}}"
            data-like="<%=blog._id%>"
          ></i>
        <% if (user._id == blog.author){ %>
          <div class="btn-group">
            <button
              type="button"
              class="btn btn-sm btn-primary dropdown-toggle"
              data-bs-toggle="dropdown"
            ></button>
            <ul class="dropdown-menu">
              <li>
                <a href="/blogs/delete/<%= blog._id %>" class="dropdown-item"
                  >Delete</a
                >
              </li>
            </ul>
          </div>
          <%}%>
        </div>
      </div>
      <div class="card-body">
        <div class="card-text"><%= blog.content %></div>
        <br />
        <div class="collapse" id="comments-<%=blog._id%>">
          <div class="card">
            <div class="card-body" id="comments-expanded-<%=blog._id%>">
              <% blog.comments.forEach(comment=> { %>
              <div class="d-flex justify-content-between align-items-center">
                <div>
                  <a href="/posts/<%=comment.user.username %>"><%= comment.author %></a
                  >: <%= comment.content.text %>
                </div>
                <div>
                  <small class="text-muted"> <%= comment.createdAt %></small>
                  <% if (user._id == comment.author._id || user._id == post.author._id) { %>
                  <div class="btn-group">
                    <button
                      type="button"
                      class="btn btn-sm btn-primary dropdown-toggle"
                      data-bs-toggle="dropdown"
                    ></button>
                    <ul class="dropdown-menu">
                      <li>
                        <a
                          href="/blogs/deletecomment/<%=comment._id%>"
                          class="dropdown-item"
                          >Delete</a
                        >
                      </li>
                    </ul>
                  </div>
                  <% } %>
                </div>
              </div>
              <% }) %>
            </div>
          </div>
        </div>
        <p class="card-text">
          <% if (blog.comments.length > 0){ %>
          <!--<a data-bs-toggle="collapse" href="#comments-{{post.id}}" role="button"> -->
            <small>View <%= blog.comments.length %> Comments</small>
          </a>
          <% } else { %>
          <small class="text-muted">No Comments</small>
          <% } %>
        </p>
        <form
          class="input-group mb-3"
          method="POST"
          action="/blogs/makeComment/<%=blog._id%>"
        >
          <input
            type="text"
            id="text"
            name="text"
            class="form-control"
            placeholder="Comment something!"
          />
          <button type="submit" class="btn btn-primary">Comment</button>
        </form>
      </div>
      <div class="card-footer text-muted"><%= blog.createdAt %></div>
    </div>
    <br/ > 
  <% }) %>
</div>
<div align="center">
  <a href="/blogs/compose"><button type="button" class="btn btn-primary btn-lg">
      Create a Post
    </button></a >
</div>

<%-include("./partials/footer") -%>

